%h3 Create folder
%ul.breadcrumbs
  %li
    %a{href: "#{memo_path}"}Folders
  %li.current
    %a.current{href: "#"}Create folder
= partial(:'shared/model_errors', :locals => { m: @folder})
%form{action: "#{memo_folders_path}", method: "POST"}
  .row
    .columns.small-12
      %label Name
      %input{type: "text", placeholder: "Give me a name", name: "folder[name]", value: @folder.name}
  .row
    .columns.small-12
      %input.button.pull-right{type: "submit", value: "Create"}