%h3= @folder.name
%ul.breadcrumbs
  %li
    %a{href: "#{memo_path}"}Folders
  %li.current
    %a{href: "#"}=@folder.name
  %li
    %a{href: "#{new_memo_note_path @folder.id}"}
      %i.icon-plus
.row
  .columns.small-12
    - if @folder.memo_notes.any?
      - @folder.memo_notes.each do |note|
        .note
          .title
            %strong= note.name
            %form{method: "POST", action: "#{destroy_note_path note.id}"}
              %a.pull-right{href: "#", data: {link_type: 'delete'}}
                %i.icon-trash
              %a.pull-right{href: "#", style: "margin-right:5px"}
                %i.icon-pencil
          .panel.content
            %pre= note.content
    - else
      = alert_box('No note can be found.', :secondary)

